def is_valid_input(data):
    # Check the name
    if not data["name"].strip():
        print("❌ VM name cannot be empty.")
        return False

    # Operating system test
    if data["os"] not in ["Linux Ubuntu" , "Windows 10"]:
        print("❌ The operating system must be 'Linux Ubuntu' or 'Windows 10'.")
        return False

    # Check for numbers
    try:
        cpu = int(data["cpu"])
        if cpu <= 0:
            print("❌ The number of cores (CPU) must be positive.")
            return False
    except ValueError:
        print("❌ CPU must be an integer.")
        return False

    try:
        ram = int(data["ram"])
        if ram <= 0:
            print("❌ The memory (RAM) must be positive.")
            return False
    except ValueError:
        print("❌ RAM must be an integer.")
        return False

    # If everything is fine
    return True
